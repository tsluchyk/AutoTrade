@model IEnumerable<AutoTrade.Domain.Concrete.Brand>

<table>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.ActionLink(item.Name, "Edit", new { item.Id }) </td>
        <td>
            @using(Html.BeginForm("Delete", "AdminBrand")){
                @Html.Hidden("Id", item.Id)
                <input type="submit" value="Delete" onclick = "return confirm('Are you sure you want to delete the brand?');"/>
            }
        </td>
    </tr>
}

</table>
