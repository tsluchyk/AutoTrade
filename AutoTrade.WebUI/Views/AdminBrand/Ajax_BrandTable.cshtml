@model IEnumerable<AutoTrade.Domain.Concrete.Brand>

<div class="span4">
<table class="table table-striped table-hover table-condensed">
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>@Html.ActionLink(item.Name, "Edit", new { item.Id }) </td>
        <td>
            @using (Html.BeginForm("Delete", "AdminBrand", FormMethod.Post, htmlAttributes: new { style = "margin:0px;" }))
            {
                @Html.Hidden("Id", item.Id)
                <input class="btn btn-danger" type="submit" value="Delete" onclick = "return confirm('Are you sure you want to delete the brand?');"/>
            }
        </td>
    </tr>
}

</table>
</div>