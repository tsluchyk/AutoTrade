@model IEnumerable<AutoTrade.Domain.Concrete.VehiclesDetails>

<table>
    <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Color</th>
        <th>Cubic Capacity</th>
        <th>Price</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.Brand</td>
        <td>@Html.ActionLink(item.AutoModel, "Edit", new {item.Id})</td>
        <td>@item.Color</td>
        <td>@item.CubicCapacity</td>
        <td>@item.Price</td>
        <td>@item.Description</td>
        <td>
        @using (Html.BeginForm("Delete", "AdminVehicle")){
            @Html.Hidden("Id", item.Id)
            <input type="submit" value="Delete" onclick = "return confirm('Are you sure you want to delete the vehicle?');" />
        }
        </td>
    </tr>
}

</table>
