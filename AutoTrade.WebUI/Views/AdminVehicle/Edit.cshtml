@model AutoTrade.Domain.Concrete.VehiclesDetails

@{ViewBag.Title= @ViewBag.Admin==0 ? "Create Auto Model " : "Edit " + @Model.AutoModel;}

<h3>@ViewBag.Title</h3>

<div class="span4">
@using (Html.BeginForm("Edit", "AdminVehicle")){
    <div class="well well-small">
        @Html.EditorForModel()
    </div>
    
    <input class="btn btn-primary" type="submit" value="Save" />
    
    <button class="btn btn-primary" onclick="location.href='@Url.Action("VehiclesDigest", "AdminVehicle")';return false;">Cancel</button>
    
}
</div>

<script type="text/javascript">
    $(document).ready(function () {
        if (@ViewBag.Admin == 0) {
            document.getElementById("priceHistory").setAttribute("style", "visibility:hidden");
        }
    });
</script>

<div class="span4">

<table class="table table-striped table-bordered table-condensed" id="priceHistory">
<caption><div class="nav-header"><h4>Prise history</h4></div></caption>
    <thead>
        <tr>
            <th>Date</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
@if (@ViewBag.Admin == 1)
{ 
    foreach (var item in Model.History)
    {
        <tr>
            <td>@item.ChangeDate</td>
            <td>@item.Price</td>
        </tr>
    }
}
    </tbody>
</table>
</div>
