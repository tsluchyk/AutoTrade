<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/GridStyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/treeview/jquery-treeview.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery-treeview-1.4.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-treeview-async-0.1.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.autocomplete.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>

<body>
<div id="container">
  
    <div id="header">
        <div class="title">Auto Trade</div>
    </div>

<div id="navigation">
   @Html.ActionLink("Catalog", "Grid", "AutoModel")&nbsp;|&nbsp;
   @Html.ActionLink("Brands Digest", "BrandsDigest", "AdminBrand")&nbsp;|&nbsp;
   @Html.ActionLink("Vehicles Digest", "VehiclesDigest", "AdminVehicle")&nbsp;|&nbsp;

</div>


     <div id="categories">
        @{Html.RenderAction("RenderTree", "TreeView");}
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tree').treeview({
                url: '@Url.Action("RenderTree", "TreeView")',
                ajax: {
                    type: 'post'
                }
            });

            $('#tree .folder').live("click", function(){
                document.getElementById("gridSearchText").innerHTML="Auto Brand:"
                document.getElementById("fieldsetSearch").setAttribute("style", "visibility:visible")
                document.getElementById("spAutoModels").setAttribute("style", "visibility:hidden; display:none")
                document.getElementById("spBrands").setAttribute("style", "visibility:visible")
                document.getElementById("ActualBrands").setAttribute("style", "width:13em")
            });

            $('#tree .file').live("click", function () {
                document.getElementById("gridSearchText").innerHTML ="Auto Model:"
                document.getElementById("fieldsetSearch").setAttribute("style", "visibility:visible")
                document.getElementById("spAutoModels").setAttribute("style", "visibility:visible")
                document.getElementById("spBrands").setAttribute("style", "visibility:hidden; display:none")
                document.getElementById("ActualAutoModels").setAttribute("style", "width:13em")
            });

        });
    </script>
    
    <div>
    @if (TempData["message"] != null){
        <div class="message">@TempData["message"]</div>
    }
    </div>
    <div id="content">
     @RenderBody()
    </div>


    <div id="footer">
         Version 0.0.0.1
        &nbsp;|&nbsp;Designed by <a href="http://wikipedia.org">Tanya Sluchyk</a>
        &nbsp;|&nbsp;<a href="mailto:sluchyk@gmail.com">Contact by e-mail</a>
    </div>
 </div>
</body>
</html>
